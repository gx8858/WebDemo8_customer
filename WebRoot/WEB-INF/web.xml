<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>WebDemo8_customer</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>AddCustomerServlet</servlet-name>
    <servlet-class>cn.itcast.action.AddCustomerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ListCustomerServlet</servlet-name>
    <servlet-class>cn.itcast.action.ListCustomerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>InitupdateServlet</servlet-name>
    <servlet-class>cn.itcast.action.InitupdateServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateServlet</servlet-name>
    <servlet-class>cn.itcast.action.UpdateServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SelectByNameAndTypeServlet</servlet-name>
    <servlet-class>cn.itcast.action.SelectByNameAndTypeServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>deleteServlet</servlet-name>
  	<servlet-class>cn.itcast.action.DeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>deleteServlet</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddCustomerServlet</servlet-name>
    <url-pattern>/addCustomer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ListCustomerServlet</servlet-name>
    <url-pattern>/listCustomer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>InitupdateServlet</servlet-name>
    <url-pattern>/initupdate</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateServlet</servlet-name>
    <url-pattern>/update</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SelectByNameAndTypeServlet</servlet-name>
    <url-pattern>/selectByNameAndType</url-pattern>
  </servlet-mapping>
</web-app>